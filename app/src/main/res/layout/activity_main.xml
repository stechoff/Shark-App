<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Global Progress -->
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="true"
            android:indeterminateTint="#4FC3F7"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Device Selector Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#16213E"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GERÃ„T"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/device_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/status_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#16213E"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Top Row: Device Name + Connection Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/robot_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/device_name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shark Roboter"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/connection_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â— Verbinde..."
                            android:textColor="#FFA726"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Current Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/stat_background"
                        android:padding="12dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textColor="#9E9E9E"
                            android:textSize="10sp"
                            android:letterSpacing="0.15"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Verbinde..."
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/stat_background"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEISTUNG"
                            android:textColor="#9E9E9E"
                            android:textSize="10sp"
                            android:letterSpacing="0.15"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/power_mode_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â€“"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Battery -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AKKU"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ProgressBar
                        android:id="@+id/battery_progress"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#66BB6A"
                        android:progressBackgroundTint="#2D3561"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/battery_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”‹ â€“%"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Cleaning Time (shown only when cleaning) -->
                <TextView
                    android:id="@+id/cleaning_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/area_cleaned_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Control Buttons -->
        <LinearLayout
            android:id="@+id/controls_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Main Controls Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#16213E"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STEUERUNG"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp"
                        android:letterSpacing="0.15"
                        android:layout_marginBottom="16dp"/>

                    <!-- Start / Pause Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <Button
                            android:id="@+id/btn_start"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="â–¶ Starten"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="@drawable/button_start"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btn_pause"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="â¸ Pause"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="@drawable/button_secondary"
                            android:enabled="false"/>
                    </LinearLayout>

                    <!-- Stop / Dock Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_stop"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="â¹ Stoppen"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="@drawable/button_stop"
                            android:layout_marginEnd="8dp"
                            android:enabled="false"/>

                        <Button
                            android:id="@+id/btn_dock"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="ðŸ  Zur Basis"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:background="@drawable/button_dock"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#16213E"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btn_map"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="ðŸ—º Karte"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:background="@drawable/button_secondary"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btn_schedule"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="ðŸ“… ZeitplÃ¤ne"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:background="@drawable/button_dock"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#16213E"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="â„¹ Status wird alle 10 Sekunden automatisch aktualisiert."
                    android:textColor="#616161"
                    android:textSize="12sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
